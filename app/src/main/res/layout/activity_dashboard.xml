<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.DashboardActivity">

    <ScrollView
        android:id="@+id/dashboard_scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#ffffff"
                android:orientation="horizontal"
                android:layout_marginBottom="3dp"
                android:weightSum="1">

                <LinearLayout
                    android:id="@+id/grid1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:background="@color/color1"
                    android:orientation="vertical"
                    android:layout_marginRight="3dp"
                    android:layout_marginLeft="3dp"
                    android:layout_marginTop="3dp"
                    android:paddingBottom="25dp"
                    android:paddingTop="25dp">

                    <TextView
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Total Canes"
                        android:textSize="17dp"
                        android:textColor="#fff"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"

                        android:text="50"
                        android:textColor="#fff"
                        android:textSize="17dp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/grid2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/color3"
                    android:orientation="vertical"
                    android:paddingBottom="25dp"
                    android:layout_marginRight="3dp"
                    android:layout_marginTop="3dp"
                    android:paddingTop="25dp"
                    android:layout_weight="0.5">

                    <TextView
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Condition"
                        android:textSize="17dp"
                        android:textColor="#fff"/>

                    <TextView
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Good Cond - 45"
                        android:textSize="17dp"
                        android:textColor="#fff"/>
                    <TextView
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Damaged Cond - 45"
                        android:textSize="17dp"
                        android:textColor="#fff"/>


                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#ffffff"
                    android:orientation="horizontal"
                    android:layout_marginBottom="3dp"
                    android:weightSum="1">

                    <LinearLayout
                        android:layout_marginRight="3dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5"
                        android:background="@color/color4"
                        android:layout_marginLeft="3dp"
                        android:paddingTop="25dp"
                        android:paddingBottom="25dp"
                        android:orientation="vertical">

                        <TextView
                            android:gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Total Available Stock - 50"
                            android:textSize="17dp"
                            android:textColor="#fff"/>

                        <TextView
                            android:gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Total Remaining Stock - 41"
                            android:textColor="#fff"
                            android:textSize="17dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/color8"
                        android:paddingTop="25dp"
                        android:paddingBottom="25dp"
                        android:layout_marginRight="3dp"
                        android:orientation="vertical"
                        android:layout_weight="0.5">

                        <TextView
                            android:gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Empty Canes"
                            android:textSize="17dp"
                            android:textColor="#fff"/>

                        <TextView
                            android:gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="45"
                            android:textSize="17dp"
                            android:textColor="#fff"/>

                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#ffffff"
                    android:orientation="horizontal"
                    android:layout_marginBottom="3dp"
                    android:weightSum="1">

                    <LinearLayout
                        android:id="@+id/grid5"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5"
                        android:background="@color/color7"
                        android:orientation="vertical"
                        android:layout_marginRight="3dp"
                        android:layout_marginLeft="3dp"
                        android:paddingBottom="25dp"
                        android:paddingTop="25dp">

                        <TextView
                            android:gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text=" Add New Customer"
                            android:textSize="17dp"
                            android:textColor="#fff"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:paddingTop="20dp"
                            android:text=""
                            android:textColor="#fff"
                            android:textSize="20dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/grid6"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/color11"
                        android:orientation="vertical"
                        android:paddingBottom="25dp"
                        android:layout_marginRight="3dp"
                        android:paddingTop="25dp"
                        android:layout_weight="0.5">

                        <TextView
                            android:gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Existing Customer"
                            android:textSize="17dp"
                            android:textColor="#fff"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:paddingTop="20dp"
                            android:text=""
                            android:textColor="#fff"
                            android:textSize="20dp" />
                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#ffffff"
                    android:orientation="horizontal"
                    android:layout_marginBottom="3dp"
                    android:weightSum="1">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5"
                        android:background="@color/color9"
                        android:orientation="vertical"
                        android:layout_marginRight="3dp"
                        android:layout_marginLeft="3dp"
                        android:paddingBottom="25dp"
                        android:paddingTop="25dp">

                        <TextView
                            android:gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Total delivered Canes"
                            android:textSize="17dp"
                            android:textColor="#fff"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="25"
                            android:textColor="#fff"
                            android:textSize="17dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/color2"
                        android:orientation="vertical"
                        android:paddingBottom="20dp"
                        android:layout_marginRight="3dp"
                        android:paddingTop="25dp"
                        android:layout_weight="0.5">

                        <TextView
                            android:gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Date Wise Report"
                            android:textSize="17dp"
                            android:textColor="#fff"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:paddingTop="20dp"
                            android:text=""
                            android:textColor="#fff"
                            android:textSize="20dp" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#ffffff"
                    android:orientation="horizontal"
                    android:layout_marginBottom="3dp"
                    android:weightSum="1">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5"
                        android:background="@color/color1"
                        android:orientation="vertical"
                        android:layout_marginRight="3dp"
                        android:layout_marginLeft="3dp"
                        android:paddingBottom="25dp"
                        android:paddingTop="25dp">

                        <TextView
                            android:gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="PerDay Earnings"
                            android:textSize="17dp"
                            android:textColor="#fff"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="500 Rs"
                            android:textColor="#fff"
                            android:textSize="17dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/color4"
                        android:orientation="vertical"
                        android:paddingBottom="20dp"
                        android:layout_marginRight="3dp"
                        android:paddingTop="25dp"
                        android:layout_weight="0.5">

                        <TextView
                            android:gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Upcoming Module..."
                            android:textSize="17dp"
                            android:textColor="#fff"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:paddingTop="20dp"
                            android:text=""
                            android:textColor="#fff"
                            android:textSize="20dp" />
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>